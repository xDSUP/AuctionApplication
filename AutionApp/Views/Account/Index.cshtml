@model User
@{
    ViewData["Title"] = "Профиль";
}

<h4>@ViewData["Title"]</h4>

<div class="bd-example bd-example-tabs">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active show" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Основная инфа</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="bids-tab" data-toggle="tab" href="#bids" role="tab" aria-controls="bids" aria-selected="false">Ставки</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="mylot-tab" data-toggle="tab" href="#mylot" role="tab" aria-controls="mylot" aria-selected="false">Мои лоты</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="mybuyerlot-tab" data-toggle="tab" href="#mybuyerlot" role="tab" aria-controls="mybuyerlot" aria-selected="false">Мои покупки</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade active show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <h5>Профиль</h5>
            <div class="row">
                <div class="col-md-6">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.UserName"></label>
                            <input asp-for="@Model.UserName" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input asp-for="@Model.Email" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.PhoneNumber"></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Avatar"></label>
                            <input asp-for="@Model.Avatar" class="form-control" />
                            <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
                        </div>
                        <button id="update-profile-button" type="submit" class="btn btn-primary">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="bids" role="tabpanel" aria-labelledby="bids-tab">
            @{ if (Model.Bids.Count() == 0)
                {
                    <h5>Ставок пока нет</h5>
                }
                else
                {
                    <h5>Ставок: @Model.Bids.Count()</h5>
                    <table class="table">
                        <thead>
                            <tr class="d-table-row"><th>Ставка</th><th>Дата</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var bid in Model.Bids)
                            {
                                <tr class="d-table-row">
                                    <td>@bid.Rate</td>
                                    <td>@bid.Time</td>
                                    <td><a class="btn btn-danger">Удалить</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            }
        </div>
        <div class="tab-pane fade" id="mylot" role="tabpanel" aria-labelledby="mylot-tab">
            <h5>Мои лоты:</h5>
            <div>
                @Html.RenderPartialAsync("_lotsTable", Model.Lots.ToList())
            </div>
        </div>
        <div class="tab-pane fade" id="mybuyerlot" role="tabpanel" aria-labelledby="mybuyerlot-tab">
            <h5>Мои покупки:</h5>
            <div>
                @{
                    // получаем список покупок
                    var listLots = new List<Lot>();
                    @foreach (var sell in Model.Sells)
                    {
                        listLots.Add(sell.Lot);
                    }
                    @Html.RenderPartialAsync("_lotsTable", listLots);
                }

            </div>
        </div>
    </div>
    <a class="pt-4" asp-action="Index">Back to List</a>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
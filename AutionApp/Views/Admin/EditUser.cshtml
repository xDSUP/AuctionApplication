@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<form asp-action="EditUser" asp-controller="Admin">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <h2 asp-for="UserRoles" class="control-label">Роли: </h2>
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
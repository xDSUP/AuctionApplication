@model AutionApp.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>EditCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <textarea asp-for="Desc" class="form-control"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.AllCategories" ></select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <input class="form-check-input hidden" asp-for="IsGroup" /> @Html.DisplayNameFor(model => model.IsGroup)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Categories">Вернуться назад</a>
</div>

@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Список пользователей";
}
<a asp-action="CreateUser">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Логин</th><th>Права пользователя</th><th>UserName</th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.User.Email</td>
    <td>@user.User.UserName</td>
    <td>
        @foreach (var role in user.Roles)
        {
            <b>@role</b><br />
        }
    </td>
    <td>
        <form asp-action="DeleteUser" asp-route-id="@user.User.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.User.Id">Изменить</a>
            <button type="submit" class="btnn btn-sm btn-danger">Удалить</button>
        </form>
    </td>
</tr>
    }
</table>